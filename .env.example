# Hetzner API Token
HETZNER_API_TOKEN=your_api_token_here

# Hetzner Projekt ID
PROJECT_ID=your_project_id_here

# Hetzner Firewall ID, die aktualisiert werden soll
FIREWALL_ID=your_firewall_id_here

# Name der Regel, die aktualisiert oder neu hinzugefügt werden soll
RULE_NAME=your_rule_name_here

# Port oder Portbereich der Regel (z.B. "80" oder "22-80")
RULE_PORT=your_rule_port_here

# Protokoll für die Regel (z.B. "tcp" oder "udp")
RULE_PROTOCOL=tcp

# Comma-separierte Liste von Hosts (Domain oder IP), die aufgelöst werden sollen
# Beispiel: "example.com,192.168.1.1"
HOSTS=your_hosts_here

# Check-Intervall in Sekunden (wie oft die DNS-Auflösung durchgeführt wird)
CHECK_INTERVAL=600